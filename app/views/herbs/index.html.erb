<h1>Listing herbs</h1>

<table>
  <thead>
    <tr>
      <th>Common name</th>
      <th>Latin name</th>
      <th>Heat cool</th>
      <th>Relax tone</th>
      <th>Moisten dry</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @herbs.each do |herb| %>
      <tr>
        <td><%= herb.common_name %></td>
        <td><%= herb.latin_name %></td>
        <td><%= herb.heat_cool %></td>
        <td><%= herb.relax_tone %></td>
        <td><%= herb.moisten_dry %></td>
        <td><%= herb.notes %></td>
        <td><%= link_to 'Show', herb %></td>
        <td><%= link_to 'Edit', edit_herb_path(herb) %></td>
        <td><%= link_to 'Destroy', herb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Herb', new_herb_path %>
