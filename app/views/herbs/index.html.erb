<%- model_class = Herb -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:common_name) %></th>
      <th><%= model_class.human_attribute_name(:latin_name) %></th>
      <th><%= model_class.human_attribute_name(:heat_cool) %></th>
      <th><%= model_class.human_attribute_name(:relax_tone) %></th>
      <th><%= model_class.human_attribute_name(:moisten_dry) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @herbs.each do |herb| %>
      <tr>
        <td><%= link_to herb.id, herb_path(herb) %></td>
        <td><%= herb.common_name %></td>
        <td><%= herb.latin_name %></td>
        <td><%= herb.heat_cool %></td>
        <td><%= herb.relax_tone %></td>
        <td><%= herb.moisten_dry %></td>
        <td><%= herb.notes %></td>
        <td><%=l herb.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_herb_path(herb), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      herb_path(herb),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_herb_path,
            :class => 'btn btn-primary' %>
