<%= form_for @herb, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :common_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :common_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :latin_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :latin_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :heat_cool, 'Cooling', :class => 'control-label' %>
    <div class="controls slider-control">
      <%= f.hidden_field :heat_cool, :class => 'form-control' %>
      <div id='HC'></div>
      <div class='right-label'>Heating</div>
    </div>
    <!--label class='right-label'>Heating</label -->
  </div>
  <div class="form-group">
    <%= f.label :relax_tone, 'Toning', :class => 'control-label' %>
    <div class="controls slider-control">
      <%= f.hidden_field :relax_tone, :class => 'form-control' %>
      <div id='RT'></div>
      <div class='right-label'>Relaxing</div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :moisten_dry, 'Drying', :class => 'control-label' %>
    <div class="controls slider-control">
      <%= f.hidden_field :moisten_dry, :class => 'form-control' %>
      <div id='MD'></div>
      <div class='right-label'>Moistening</div>
    </div>
  </div>
  <div id='composite'></div>
  <div class="form-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :notes, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            herbs_path, :class => 'btn btn-default' %>
 
<% end %>
