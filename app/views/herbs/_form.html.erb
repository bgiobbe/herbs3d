<%= form_for @herb, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :common_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :common_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :latin_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :latin_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :heat_cool, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :heat_cool, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :relax_tone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :relax_tone, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :moisten_dry, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :moisten_dry, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :notes, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            herbs_path, :class => 'btn btn-default' %>
 
<% end %>
